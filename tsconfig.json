{
  "compilerOptions": {
    "target": "es2021",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/I[A-Z]+.ts",
    "**/factories/*.ts"
  ]
}
